<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      spacing="15"
      prefWidth="700"
      prefHeight="600"
      style="-fx-background-color: #ffffff; -fx-background-radius: 8px; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 10, 0, 0, 2);">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Title Section -->
    <HBox alignment="CENTER_LEFT" spacing="10">
        <Text text="Product Reviews"
              style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-fill: #2c3e50;"/>
        <Region HBox.hgrow="ALWAYS"/>
    </HBox>

    <Separator/>

    <!-- Reviews Table -->
    <VBox spacing="10" VBox.vgrow="ALWAYS" minHeight="300">
        <Label text="Customer Reviews"
               style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #34495e;"/>

        <TableView fx:id="reviewTable"
                   VBox.vgrow="ALWAYS"
                   style="-fx-background-color: transparent;">
            <columns>
                <TableColumn fx:id="ratingColumn"
                           text="Rating"
                           prefWidth="100"
                           style="-fx-alignment: CENTER;"/>
                <TableColumn fx:id="commentColumn"
                           text="Comment"
                           prefWidth="350"/>
                <TableColumn fx:id="dateColumn"
                           text="Date"
                           prefWidth="200"
                           style="-fx-alignment: CENTER;"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>

        <!-- Pagination -->
        <Pagination fx:id="pagination" maxPageIndicatorCount="5"/>
    </VBox>

    <Separator/>

    <!-- Add Review Section -->
    <VBox spacing="15"
          style="-fx-background-color: #f8f9fa; -fx-background-radius: 8px; -fx-padding: 20px;">

        <Label text="Add Your Review"
               style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #34495e;"/>

        <!-- Email Field -->
        <VBox spacing="5">
            <Label text="Email *"
                   style="-fx-font-size: 14px; -fx-font-weight: 500; -fx-text-fill: #2c3e50;"/>
            <TextField fx:id="emailField"
                      promptText="Enter your email"
                      style="-fx-background-color: #f8f9fa; -fx-border-color: #dee2e6; -fx-border-radius: 4px; -fx-background-radius: 4px; -fx-padding: 8px 12px; -fx-font-size: 14px;"
                      />
        </VBox>

        <!-- Rating Spinner -->
        <VBox spacing="5">
            <Label text="Rating *"
                   style="-fx-font-size: 14px; -fx-font-weight: 500; -fx-text-fill: #2c3e50;"/>
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Spinner fx:id="ratingSpinner"
                        prefWidth="100"
                        editable="false"
                        style="-fx-background-color: #f8f9fa; -fx-border-color: #dee2e6; -fx-border-radius: 4px;"/>
                <Label text="stars"
                       style="-fx-text-fill: #7f8c8d; -fx-font-size: 13px;"/>
            </HBox>
        </VBox>

        <!-- Comment Area -->
        <VBox spacing="5" VBox.vgrow="ALWAYS">
            <Label text="Comment *"
                   style="-fx-font-size: 14px; -fx-font-weight: 500; -fx-text-fill: #2c3e50;"/>
            <TextArea fx:id="commentArea"
                     promptText="Share your experience with this product..."
                     wrapText="true"
                     prefRowCount="4"
                     style="-fx-background-color: #f8f9fa; -fx-border-color: #dee2e6; -fx-border-radius: 4px; -fx-background-radius: 4px; -fx-padding: 8px 12px; -fx-font-size: 14px;"/>
        </VBox>

        <!-- Action Buttons -->
        <HBox spacing="10" alignment="CENTER_RIGHT">
            <Button text="Cancel"
                   onAction="#handleClose"
                   style="-fx-background-color: #ecf0f1; -fx-text-fill: #2c3e50; -fx-padding: 10px 20px; -fx-background-radius: 4px; -fx-cursor: hand; -fx-font-size: 14px;"
                   />
            <Button text="Submit Review"
                   onAction="#handleSubmitReview"
                   style="-fx-background-color: #1f2933; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10px 20px; -fx-background-radius: 4px; -fx-cursor: hand; -fx-font-size: 14px;"
                   />
        </HBox>
    </VBox>
</VBox>
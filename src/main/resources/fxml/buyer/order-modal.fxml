<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="12" padding="20"
      xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
>

    <Label text="Customer Details" styleClass="section-title"/>

    <TextField fx:id="firstNameField" promptText="First name"/>
    <TextField fx:id="lastNameField" promptText="Last name"/>
    <TextField fx:id="emailField" promptText="Email"/>
    <TextField fx:id="phoneField" promptText="Phone"/>

    <Separator/>

    <Label text="Order Details" styleClass="section-title"/>

    <TextField fx:id="quantityField" promptText="Quantity"/>
    <TextField fx:id="shippingCountryField" promptText="Shipping country"/>
    <TextField fx:id="shippingCityField" promptText="Shipping city"/>
    <TextField fx:id="shippingCodeField" promptText="Shipping code"/>
    <TextField fx:id="postalCodeField" promptText="Postal code"/>

    <Button fx:id="placeOrderBtn"
            text="Place Order"
            onAction="#handlePlaceOrder"/>
</VBox>

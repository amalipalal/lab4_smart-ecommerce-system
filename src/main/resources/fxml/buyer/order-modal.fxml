<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="18"
      xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      style="-fx-padding: 24 48; -fx-background-color: white;"
>

    <!-- Title -->
    <Label text="Place Order"
           style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <!-- ================= CUSTOMER DETAILS ================= -->
    <VBox spacing="10">
        <Label text="Customer Details"
               style="-fx-font-size: 13px; -fx-font-weight: bold;" />

        <GridPane hgap="12" vgap="10">
            <columnConstraints>
                <ColumnConstraints percentWidth="50"/>
                <ColumnConstraints percentWidth="50"/>
            </columnConstraints>

            <TextField fx:id="firstNameField"
                       promptText="First name"
                       GridPane.columnIndex="0"
                       GridPane.rowIndex="0"/>

            <TextField fx:id="lastNameField"
                       promptText="Last name"
                       GridPane.columnIndex="1"
                       GridPane.rowIndex="0"/>

            <TextField fx:id="emailField"
                       promptText="Email"
                       GridPane.columnIndex="0"
                       GridPane.rowIndex="1"
                       GridPane.columnSpan="2"/>

            <TextField fx:id="phoneField"
                       promptText="Phone"
                       GridPane.columnIndex="0"
                       GridPane.rowIndex="2"
                       GridPane.columnSpan="2"/>
        </GridPane>
    </VBox>

    <Separator />

    <!-- ================= ORDER DETAILS ================= -->
    <VBox spacing="10">
        <Label text="Order Details"
               style="-fx-font-size: 13px; -fx-font-weight: bold;" />

        <GridPane hgap="12" vgap="10">
            <columnConstraints>
                <ColumnConstraints percentWidth="50"/>
                <ColumnConstraints percentWidth="50"/>
            </columnConstraints>

            <TextField fx:id="quantityField"
                       promptText="Quantity"
                       GridPane.columnIndex="0"
                       GridPane.rowIndex="0"/>

            <TextField fx:id="shippingCountryField"
                       promptText="Shipping country"
                       GridPane.columnIndex="1"
                       GridPane.rowIndex="0"/>

            <TextField fx:id="shippingCityField"
                       promptText="Shipping city"
                       GridPane.columnIndex="0"
                       GridPane.rowIndex="1"/>

            <TextField fx:id="shippingCodeField"
                       promptText="Shipping code"
                       GridPane.columnIndex="1"
                       GridPane.rowIndex="1"/>

            <TextField fx:id="postalCodeField"
                       promptText="Postal code"
                       GridPane.columnIndex="0"
                       GridPane.rowIndex="2"
                       GridPane.columnSpan="2"/>
        </GridPane>
    </VBox>

    <!-- ================= ACTION ================= -->
    <HBox alignment="CENTER_RIGHT">
        <Button fx:id="placeOrderBtn"
                text="Place Order"
                onAction="#handlePlaceOrder"
                style="
                    -fx-background-color: #1f2933;
                    -fx-text-fill: white;
                    -fx-font-weight: bold;
                    -fx-padding: 8 20;
                "/>
    </HBox>

</VBox>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<BorderPane xmlns="http://javafx.com/javafx/21.0.2"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.controller.AdminShellController">

    <!-- Sidebar -->
    <left>
        <VBox spacing="20"
              style="
                  -fx-background-color: #1f2933;
                  -fx-padding: 20;
              ">

            <Label text="Admin"
                   style="
                       -fx-text-fill: #e5e7eb;
                       -fx-font-size: 18px;
                       -fx-font-weight: bold;
                   "/>

            <Button fx:id="productsBtn" text="Products"
                    maxWidth="Infinity"
                    onAction="#goProducts"
                    style="
                        -fx-background-color: transparent;
                        -fx-text-fill: #d1d5db;
                        -fx-font-size: 14px;
                        -fx-alignment: CENTER_LEFT;
                        -fx-graphic-text-gap: 10;
                    ">
                <graphic>
                    <FontIcon iconLiteral="fas-box" iconSize="16" iconColor="#d1d5db"/>
                </graphic>
            </Button>

            <Button fx:id="categoriesBtn" text="Categories"
                    maxWidth="Infinity"
                    onAction="#goCategories"
                    style="
                        -fx-background-color: transparent;
                        -fx-text-fill: #d1d5db;
                        -fx-font-size: 14px;
                        -fx-alignment: CENTER_LEFT;
                        -fx-graphic-text-gap: 10;
                    ">
                <graphic>
                    <FontIcon iconLiteral="fas-tags" iconSize="16" iconColor="#d1d5db"/>
                </graphic>
            </Button>

            <Button fx:id="ordersBtn" text="Orders"
                    maxWidth="Infinity"
                    style="
                        -fx-background-color: transparent;
                        -fx-text-fill: #d1d5db;
                        -fx-font-size: 14px;
                        -fx-alignment: CENTER_LEFT;
                        -fx-graphic-text-gap: 10;
                    ">
                <graphic>
                    <FontIcon iconLiteral="fas-shopping-cart" iconSize="16" iconColor="#d1d5db"/>
                </graphic>
            </Button>

            <Button fx:id="customersBtn" text="Customers"
                    maxWidth="Infinity"
                    style="
                        -fx-background-color: transparent;
                        -fx-text-fill: #d1d5db;
                        -fx-font-size: 14px;
                        -fx-alignment: CENTER_LEFT;
                        -fx-graphic-text-gap: 10;
                    ">
                <graphic>
                    <FontIcon iconLiteral="fas-users" iconSize="16" iconColor="#d1d5db"/>
                </graphic>
            </Button>

            <Pane VBox.vgrow="ALWAYS"/>

            <!-- Buyer View Button -->
            <Button text="Buyer View"
                    onAction="#goBuyer"
                    maxWidth="Infinity"
                    style="
                    -fx-background-color: #111827;
                    -fx-text-fill: #e5e7eb;
                    -fx-font-size: 13px;
                    -fx-alignment: CENTER_LEFT;
                    -fx-padding: 10 12;
                    -fx-background-radius: 8;
                    -fx-cursor: hand;
                ">
                <graphic>
                    <FontIcon iconLiteral="fas-store"
                              iconSize="14"
                              iconColor="#e5e7eb"/>
                </graphic>
            </Button>

        </VBox>
    </left>

    <!-- Dynamic Content -->
    <center>
        <StackPane fx:id="contentArea"/>
    </center>

</BorderPane>

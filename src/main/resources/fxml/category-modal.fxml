<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21.0.2"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.controller.category.CategoryModalController"
      spacing="10" alignment="CENTER" style="-fx-padding: 20;">

    <Label text="Add Category"/>
    <TextField fx:id="nameField" promptText="Category Name"/>
    <TextArea fx:id="descField" promptText="Description"/>
    <Button text="Save" fx:id="saveBtn" onAction="#handleSave"/>
</VBox>
